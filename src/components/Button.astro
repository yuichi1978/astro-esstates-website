---
import { joinClasses } from "../utils/joinClasses";
import { replaceUrls } from "../utils/replaceUrls";

type Props = {
  classes: string;
  styles: string;
  url?: string;
  content: string;
};

const { classes, styles, url, content } = Astro.props;
const href = replaceUrls(url || "#", Astro.url.host);
---

<a
  href={href}
  style={styles}
  class={joinClasses(
    "inline-block uppercase font-bold tracking-[1.3px] bg-blast-off rounded-full py-3 px-6",
    classes,
  )}
  set:html={content}
/>
